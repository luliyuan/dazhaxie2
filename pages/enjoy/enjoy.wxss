/* pages/enjoy/enjoy.wxss */
page{
	background: #f6f6f6;
}
.page{
	padding-top: 100rpx;
}
.header{
	line-height: 100rpx;
	margin-top: 30rpx;
	text-align: center;
	font-size: 30rpx;
	font-weight: bold;
}
.info{
	height: 225rpx;
	padding-left: 40rpx;
	display: flex;
	background: #ff4200;
	color: #FFFFFF;
	align-items: center;
}
.name{
	font-size: 40rpx;
	font-weight: bold;
}
.info image{
	border-radius: 50%;
	width: 130rpx;
	height: 130rpx;
}
.info-show{
	padding-left: 30rpx;
}
.integral{
	display: flex;
	
}
.integral_current{
	padding-right: 20rpx;
	
}
.integral_current .border{
	border-right: 1px solid #FFFFFF;
	height: 13rpx;
	display:inline-block;
	margin-left: 18rpx;
}
.integral_current,.integral_record{
	font-size: 23rpx;
	line-height: 23rpx;
}
.integral_record{
	padding-left: 40rpx;
}
.banner{
	padding-top: 18rpx;
}
.banner image{
	width: 100%;
	height: 254rpx;
}
.goods_list{
	display: flex;
	
	
}
.goods_li{
	width: 345rpx;
	margin-left: 20rpx;
}
.goods_list image{
	width: 345rpx;
	height: 353rpx;
	display: block;
	border-radius: 10px;
}

.goods_info{
	background: #FFFFFF;
	padding-top: 10rpx;
	padding-left: 24rpx;
	padding-bottom: 20rpx;
}
.goods_info .title{
	font-weight: bold;
	line-height: 42rpx;
	font-size: 30rpx;
}
.goods_info .goods_class{
	font-size: 24rpx;
	color: #787878;
	line-height: 35rpx;
}
.operation{
	display: flex;
	align-items: flex-start;
	margin-top: 7rpx;
	justify-content: space-between;
	
}
.operation view:first-child{
	padding: 0 18rpx;
	border: 1px solid #ff4200;
	line-height: 40rpx;
	display: inline-block;
	font-size: 20rpx;
	color: #ff4200;
	border-radius: 20rpx;
}
.operation view:last-child{
	background:#ff4200 ;
	color: #FFFFFF;
	padding: 0 18rpx;
	border: 1px solid #ff4200;
	line-height: 40rpx;
	display: inline-block;
	font-size: 20rpx;
	margin-right: 20rpx;
	border-radius: 20rpx;
	
}