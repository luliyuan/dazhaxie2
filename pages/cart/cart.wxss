.page{
	background: #f6f6f6;
}
.main{
	padding-top: 100rpx;
	background: #f6f6f6;
	border-bottom: 1px solid #ececec;
	margin-top: 25rpx;
}
.cart-list{
    position: relative;
    padding: 28rpx 0;
    height: 168rpx;
    border-bottom: 1rpx solid #e9e9e9;
	display: flex;
	width: 710rpx;
	margin: 0 auto;
	border-radius: 10px;
	background: #FFFFFF;
	margin-top: 28rpx;
}
.cart-list .check{
	width: 64rpx;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	
}

.cart-list .cart-thumb{
  
    width: 168rpx;
    height: 168rpx;
}
.cart-list .cart-pro-name{
	display: block;
    font-size: 30rpx;
	padding-left: 20rpx;
   font-weight: bold;
   line-height: 65rpx;
   margin-bottom: 17rpx;
}
.cart-list .cart-pro-price{
	color: #ff4200;
	font-size: 24rpx;
	line-height: 45rpx;
	text-indent: 20rpx;
	width: 275rpx;
}
.cart-list .cart-count-box{
  
  
    height: 43rpx;
	align-self: flex-end;
	font-size: 24rpx;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 43rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    font-size: 24rpx;
    width: 65rpx;
    height: 100%;
}
.cart-count-num{
    width: 75rpx;
	font-size: 24rpx;
	background: #f7f7f7;
	border-radius: 10rpx;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 44rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 40rpx 0 80rpx;
    box-sizing: border-box;
    background: #f3f3f3;
	display: flex;
	justify-content: space-between;
	align-items: center;
	
    
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon image,.order-icon navigator{
  display: block;
  width: 45rpx;
  height: 45rpx;
}
.cart-toatl-price{
    margin-right: -180rpx;
	color: #ff4200;
	font-size: 30rpx;
	padding-right: 10rpx;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}
.goods_title{
	height: 119rpx;
	display: flex;
	align-items: center;
}
.goods_title image{
	width: 335rpx;
	margin-left: auto;
	margin-right: auto;
	
	display: block;
}
.goods_ul{
	display: flex;
}
.goods_ul .goods_li{
	width: 345rpx;
	background: #FFFFFF;
	margin-left: 20rpx;
	border-radius: 10rpx;
	padding-bottom: 18rpx;
}
.goods_ul .goods_li image{
	width: 100%;
	display: block;
}
.mygoods{
	line-height: 50rpx;
	padding-left: 18rpx;
	font-size: 24rpx;
	font-weight: bold;
}
.priceinfo{
	line-height: 40rpx;
}
.goods_ul .goods_li view:last-child text:first-child{
	font-size: 22rpx;	
	color: #ff4200;
	line-height: 40rpx;
}
.goods_ul .goods_li view:last-child text:last-child{
	font-size: 18rpx;	
	color: #787878;
	line-height: 40rpx;
	margin-left: 10rpx;
}
.gobuy{
	width: 162rpx;
	height: 70rpx;
	color: #FFFFFF;
	background: #ff4200;
	font-size: 24rpx;
	text-align: center;
	line-height: 70rpx;
	display: block;
	border-radius: 10rpx;
}
.cart_null{
	height: 460rpx;
	background: #FFFFFF;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}
.cart_null image{
	width: 215rpx;
}
.cart-no-data{
	display: flex;
	font-size: 25rpx;
}
.gotomall{
	color: #ff4200;
	text-decoration: underline;
	
}