/* pages/orderList/orderList.wxss */

page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.box {
  flex: 1;
  height: 100px;
}

.sv {
  height: 100%;
}

.noneOrder {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.noneOrder-body {
  margin-top: -100px;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.noneOrder image {
  background: red;
  width: 120px;
  height: 120px;
}

.tips {
  margin-top: 20px;
  font-size: 16px;
  text-align: center;
  color: #aaa;
}

.sbutips {
  font-size: 14px;
  color: #aaa;
}

.sbutips p {
  color: red;
  border-bottom: 1px solid red;
}
