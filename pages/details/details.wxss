/* pages/details/details.wxss */
@import "/vendor/wxParse/wxParse.wxss";

.main {
	/* padding-top: 100rpx; */
	background: #FFFFFF;
	padding-bottom: 102rpx;
}

page {

	position: relative;
}

.detailsimg {
	width: 100%;
	height: 644rpx;
}

.goods_title {
	padding-top: 10rpx;
	height: 55rpx;
	padding-left: 30rpx;
	display: flex;
	justify-content: space-between;
	padding-right: 35rpx;
	align-items: center;
	font-size: 32rpx;
	font-weight: bold;
	color: #010101;
}

.selcet_item .active {
	border: 1px solid #000000;
}

.goods_title image {
	width: 33rpx;
	height: 34rpx;
}

.shareicon {
	position: absolute;
	right: 16rpx;
	top: 12rpx;
}
.isshare{
	
}
.goodsInfotitle {
	line-height: 42rpx;
	padding-left: 30rpx;
	font-size: 25rpx;
	color: #717171;
	width: 80%;
}

.price {
	padding-left: 30rpx;
	color: #ff4200;
	font-size: 23rpx;
	line-height: 50rpx;
	padding-bottom: 10rpx;
}

.assemble {
	padding-left: 30rpx;
	padding-top: 18rpx;
	padding-bottom: 4rpx;
	border-bottom: 1px solid #f8f8f8;
}

.assemble view:first-child {
	width: 90rpx;
	height: 42rpx;
	background: #ff4200;
	color: #FFFFFF;
	line-height: 42rpx;
	font-size: 24rpx;
	text-align: center;
	border-radius: 10rpx;
}

.assemble view:last-child {
	font-size: 24rpx;
	color: #787878;
	line-height: 50rpx;
}

.assemble1 view {
	font-size: 18rpx;
}

.assemble1 view:first-child {
	line-height: 46rpx;
	font-size: 30rpx;
	font-weight: bold;
}

.assemblebutton {
	background: #FFFFFF;
	color: #ff4200;
	width: 200rpx;
	height: 58rpx;
	line-height: 58rpx;
	text-align: center;
	font-size: 30rpx;
	border-radius: 30rpx;
}

.express {
	display: flex;
	justify-content: flex-start;
	padding-left: 30rpx;
	align-items: center;
	font-size: 24rpx;
	color: #787878;
	line-height: 65rpx;
}

.info {
	background: #f8f8f8;
	padding-top: 28rpx;
}

.addCart {
	display: flex;
}

.i-badge-count {
	width: 16rpx;
	height: 16rpx;
}

.share_button {
	width: 50rpx;
	position: absolute;
	right: 30rpx;
	top: 50%;
	margin-top: -40rpx;
}

.addCart {
	display: flex;
	line-height: 102rpx;
	height: 102rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
}

.addCart>view:first-child {
	width: 135rpx;
}

.tobuy {
	width: 315rpx;
	background: #ff7a4c;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.tosharebuy {
	flex: 1;
	background: #ff4200;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.tobuy view,
.tosharebuy view {
	line-height: 30rpx;
	font-size: 22rpx;
	color: #FFFFFF;
}

.cartImg {
	display: flex;
	justify-content: center;
	align-items: center;
	background: #FFFFFF;
}

.spec_data {
	padding: 30rpx 18rpx 0 30rpx;
}

.cart_img {
	width: 230rpx;
	height: 198rpx;
}

.goods_info {
	display: flex;
}

.spec_data {
	display: flex;

}

.cart_info {
	padding-left: 18rpx;
	padding-top: 50rpx;
}

.cart_info view:first-child {
	color: #000000;
	font-size: 32rpx;
	line-height: 65rpx;
}

.cart_price {
	color: #ff0000;
	line-height: 32rpx;
	font-size: 20rpx;
}

.cart_info view:last-child {
	line-height: 32rpx;
	font-size: 20rpx;
	color: #8c8c8c;
}

.selcet>view:first-child {
	margin-top: 20rpx;
	line-height: 80rpx;
	color: #000000;
	font-size: 22rpx;
}

.selcet {
	padding-left: 30rpx;
	padding-bottom: 22rpx;
	padding-right: 30rpx;

}

.bottom {
	border-bottom: 2px solid #ececec;
	margin-top: 22rpx;
}

.selcet_item {
	display: flex;

}

.selcet_item view {
	margin-right: 20rpx;
	height: 55rpx;
	width: 155rpx;
	line-height: 55rpx;
	text-align: center;
	background: #f5f5f5;
	color: #000000;
	font-size: 22rpx;
	border-radius: 10rpx;
}

.buy_num {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 30rpx;
	margin-bottom: 70rpx;
}

.buy_num {
	font-size: 22rpx;
	color: #000000;
}

.cart-count-box {}

.cart-count-num {
	color: #000000;
	display: inline-block;
	width: 69rpx;
	line-height: 60rpx;
	text-align: center;
	background: #f5f5f5;
	margin-left: 2px;
	margin-right: 2px;
}

.cart-count-down,
.cart-count-add {
	width: 60rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	background: #f5f5f5;
	color: #999999;
	display: inline-block;
}

.confirm {
	color: #FFFFFF;
	line-height: 84rpx;
	text-align: center;
	width: 100%;
	background: #ff4200;
	font-size: 33rpx;
	font-weight: bold;
}

.specno {
	bottom: -1110rpx;
	border-top-left-radius: 24px;
	border-top-right-radius: 24rpx;
	background: #FFFFFF;
	position: fixed;
	left: 0;
	width: 100%;
	z-index: 1;
	transition: all 0.6s;
}

.spec {

	bottom: 0;

}

.close {
	position: absolute;
	right: 30rpx;
	top: 30rpx;
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	text-align: center;
	line-height: 34rpx;
	font-size: 20rpx;
	color: #828282;
}

.shareview {
	height: 212rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	position: fixed;
	bottom:-212rpx;
	width: 100%;
	background: #FFFFFF;
	border-top: 1px solid #ececec;
	transition: all 0.3s;
	
}
.isshare{
	bottom: 0;
}
.shareview image {
	width: 97rpx;
	height: 97rpx;
	display: block;
}
