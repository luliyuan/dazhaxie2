/**app.wxss**/
page{line-height:1.6;font-family:-apple-system-font,Helvetica Neue,sans-serif;background: #f6f6f6;}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.header{
	line-height: 100rpx;
	margin-top: 30rpx;
	text-align: center;
	font-size: 30rpx;
	font-weight: bold;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	z-index: 100;
	background: #FFFFFF;
	border-bottom: 1px solid #ececec;
}